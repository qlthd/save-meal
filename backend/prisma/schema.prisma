generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FoodDonation {
  id                 Int      @id @default(autoincrement())
  title              String
  foodType           String
  estimatedPortions  Int
  description        String
  pickupPlace        String?
  latitude           Float
  longitude          Float
  address            String
  pickupInstructions String
  availableFrom      DateTime
  availableTo        DateTime
  contactName        String
  contactPhone       String
  contactEmail       String
  additionalNotes    String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  status             String   @default("pending") // pending, confirmed, collected, cancelled
  booking            Booking?
}

model Booking {
  id             Int          @id @default(autoincrement())
  association    User         @relation(fields: [associationId], references: [id])
  associationId  Int
  foodDonation   FoodDonation @relation(fields: [foodDonationId], references: [id])
  foodDonationId Int          @unique
  createdAt      DateTime     @default(now())
}

model User {
  id            Int       @id @default(autoincrement())
  corporateName String
  type          String
  lastName      String
  firstName     String
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bookings      Booking[]
}
